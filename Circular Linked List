package LinkedList;
public class CLL {
    private Node head;
    private Node tail;

    public CLL() {
        this.head = null;
        this.tail = null;
    }

    private class Node{
        int val;
        Node next;

        public Node(int val) {
            this.val = val;
        }

        public Node(int val, Node next) {
            this.val = val;
            this.next = next;
        }
    }
    public void insert(int val){
        Node node = new Node(val);
        if (head == null){
            head = node;
            tail = node;
            return;
        }
        tail.next = node;
        node.next = head;
        tail = node;
    }
    public void delete(int val){
        Node temp = head;
        if (temp.val == val){
            if (temp == tail){
                head = null;
                tail = null;
                return;
            }
            else {
                head = head.next;
                tail.next = head;
                return;
            }
        }
        while (temp != tail){
            if (temp.next.val == val){
                temp.next = temp.next.next;
                return;
            }
            temp = temp.next;
        }
        System.out.println("Value not found");
    }
    public void display(){
        Node temp = head;
        if (head != null){
            do {
                System.out.print(temp.val+" --> ");
                temp = temp.next;
            }
            while (temp != head);
            System.out.println("HEAD");
        }
    }
}
